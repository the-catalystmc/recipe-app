<section class='add-food-section'>
  <div class="add-food-container">
    <h2>Add Food</h2>
    <%= form_with model: @food, url: foods_path, method: :post, class: 'add-food-form' do |form| %>
      <br>
      <div>
        <%= form.label :name %><br>
        <%= form.text_field :name, :required => true %>
      </div>
      <br>
      <div>
        <%= form.label :measurement_unit %><br>
        <%= form.text_field :measurement_unit, :required => true %>
      </div>
      <br>
      <div>
        <%= form.label :price %><br>
        <%= form.number_field :price, step: :any, :required => true %>
      </div>
      <br>
      <div>
        <%= form.submit "Add food", class: 'add-food-btn' %>
      </div>
    <% end %>
  </div>
</section>
